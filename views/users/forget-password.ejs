<style>
  /* Style for the login form */
  form {
    max-width: 600px;
    height: 40vh;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
    margin: 50px auto;
  }

  * {
    font-family: "Poppins", sans-serif;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
  }

  input[type="email"],
  input[type="password"],
  input[type="submit"] {
    width: calc(100% - 22px); /* Adjusted width to account for padding */
    padding: 10px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    outline: none; /* Remove outline on focus */
  }

  input[type="submit"] {
    background-color: #007bff; /* Blue color similar to the registration form */
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    width: 100%;
  }

  input[type="submit"]:hover {
    background-color: #0056b3; /* Darker shade of blue on hover */
  }

  /* Style for the required fields */
  .required {
    border-color: red;
  }

  /* Footer styling */
  .footer {
    background-color: #222;
    color: #fff;
    padding: 20px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
    text-align: center;
  }

  .footer p {
    color: #ccc;
    margin: 5px 0;
  }

  .footer a {
    color: #fff;
    text-decoration: none;
  }
</style>

<%- include('../layouts/header.ejs') %>
<form action="" method="post">
    <h1>Forgot password? Don't worry!</h1>
    <input type="password" name="password" placeholder="Enter new password"  required />
    <input type="hidden" name="user_id" value="<%= user_id %>" />
    <input type="submit" value="Reset password" />
  </form>
  
  <div class="footer">
    <p>
